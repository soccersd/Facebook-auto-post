# Production Environment Configuration
# ไฟล์สำหรับ production บน VPS

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Facebook Configuration
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Server Configuration
PORT=3000
NODE_ENV=production

# Redis Configuration (if using Redis on VPS)
REDIS_URL=redis://localhost:6379

# Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=./logs

# Performance Settings
UV_THREADPOOL_SIZE=4
NODE_OPTIONS=--max-old-space-size=512

# Security Settings (สำหรับ production)
SECURE_MODE=true

# Optional: Database Configuration (if needed in future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=telegram_bot
# DB_USER=telegram_user
# DB_PASSWORD=your_secure_password

# Optional: Webhook Configuration (if switching to webhook mode)
# WEBHOOK_DOMAIN=your-domain.com
# WEBHOOK_PORT=8443
# WEBHOOK_PATH=/webhook/telegram