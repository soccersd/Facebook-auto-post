{
  "name": "telegrambot-facebook-reels-poster",
  "version": "1.0.0",
  "description": "Telegram Bot that automatically posts videos as Facebook Reels across multiple pages",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test-upload": "node test-upload.js",
    "audit-fix": "npm audit fix --legacy-peer-deps",
    "security-check": "npm audit",
    "clean-install": "rm -rf node_modules package-lock.json && npm cache clean --force && npm install --legacy-peer-deps"
  },
  "keywords": [
    "telegram",
    "bot",
    "facebook",
    "reels",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "axios": "^1.7.7",
    "bull": "^4.16.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.4",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "multer": "^2.0.2",
    "node-telegram-bot-api": "^0.66.0",
    "pm2": "^5.4.2",
    "redis": "^4.7.0",
    "tough-cookie": "^4.1.4",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.7"
  }
}
